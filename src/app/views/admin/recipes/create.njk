{% extends "admin/layout.njk" %}

{% block styles %}
  <title>Admin - Foodfy</title>
  <link rel="stylesheet" href="/styles/admin/recipes.css">
{% endblock %}

{% block content %}
  <section class="complete">
    <div class="main-text">
      <h1>Nova Receita</h1>
      <a href="/admin/recipes" class="cancel">Cancelar</a>
    </div>
    <div class="recipe">
      <form action="/admin/recipes" method="POST" enctype="multipart/form-data">
        <button class="submit save" type="submit">Salvar</button>
        {% include "admin/recipes/fields.njk" %}
      </form>
    </div>
  </section>
  <script src="/scripts/addNewNode.js"></script>
  <script src="/scripts/required.js"></script>
{% endblock %}