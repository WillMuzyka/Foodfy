<!DOCTYPE html>
<html>

  <head>
    {% include "parts/links.njk" %}
    <link rel="stylesheet" href="/styles/admin/admin.css">
    {% block styles %}
      <title>Admin - Foodfy</title>
    {% endblock %}
  </head>

  <body id="admin">
    {% include "parts/messages.njk" %}
    <header>
      <div class="header-margin">
        <a href="/admin/recipes"><img src="/assets/logoWhite.png" alt="Foodfy"></a>
        <div class="links">
          <a href="/admin/recipes">Receitas</a>
          {% if session.admin %}
          <a href="/admin/chefs">Chefs</a>
          <a href="/users/index">Usu√°rios</a>
          {% else %}
          <a href="/users/{{ session.userId }}">Conta</a>
          {% endif %}
        </div>
        {% block searchBlock %}
        {% endblock %}
      </div>
      <div class="exit">
        <form action="/session/logout" method="POST">
          <button type="submit" class="user-exit">SAIR</button>
        </form>
      </div>
    </header>

    <div class="main">
    {% block content %}{% endblock %}
    </div>
  </body>
  {% block script %}{% endblock %}
  <script src="/scripts/currentPageHighlight.js"></script>
  <script src="/scripts/globalScripts.js"></script>
</html>