<div class="chef">
  <button class="submit-form" type="submit">Salvar chef</button>

  <div class="item">
    <div>Nome do Chef</div>
    <div>
      <input required type="text" name="name" placeholder="Nome do chef" value="{{ chef.name }}">
    </div>
  </div>

  <div class="item">
    <div>Avatar</div>
    <div>
      <input required type="url" name="avatar_url" placeholder="http://" value="{{ chef.avatar_url }}">
    </div>
  </div>
</div>