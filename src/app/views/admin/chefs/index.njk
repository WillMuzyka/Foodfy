{% extends "admin/layout.njk" %}
{% import "parts/search.njk" as search %}

{% block styles %}
  <link rel="stylesheet" href="/styles/chefs.css">
{% endblock %}

{% block searchBlock %}
  {{ search.searchBox("admin/chefs", "chefs") }} 
{% endblock %}

{% block content %}
  <div class="manager">
    <h1>Gerenciar Chefs {% if filter %} - Buscando por "{{ filter }}"{% endif %}</h1>
    {% if session.admin %}
    <a class="newButton" href="/admin/chefs/create">Novo chef</a>
    {% endif %}
  </div>
  <section class="chefs">
    {% for chef in chefs %}
      <div class="chef">
        <img src="{{ chef.src }}" alt="chef img">
        <div class="chef-info">
          <p class="chef-name">{{ chef.name }}</p>
          <a class="editChef" href="/admin/chefs/{{ chef.id }}">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </section>

  {% include "parts/pagination.njk" %}
{% endblock %}