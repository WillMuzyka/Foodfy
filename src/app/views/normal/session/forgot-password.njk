{% extends "normal/layout.njk" %}

{% block styles %}
  <title>Recuperar senha - Foodfy</title>
  <link rel="stylesheet" href="/styles/normal/session.css">
{% endblock %}

{% block searchBlock %}
{% endblock %}

{% block content %}
<section class="forgot-password container">
  <form action="/session/forgot-password" method="POST">
    <div class="header">
      <h1>Esqueceu sua senha?</h1>
    </div>
    <div class="fields">
      <div class="item">
        <div>Email</div>
        <div class="input">
          <input
            required
            type="email"
            name="email"
            value="{{ user.email }}"
            placeholder="Digite seu email para recuperar sua senha"
            >
        </div>
      </div>
    </div>
    <div class="footer">
      <a href="/login">
        <i class="material-icons">keyboard_backspace</i>
        <p>Voltar</p>
      </a>
      <button type="submit" class="submit">Recuperar</button>
    </div>
  </form>
</section>
{% endblock %}