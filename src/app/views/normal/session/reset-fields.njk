<div class="item">
  <div>Email</div>
  <div class="input">
    <input
      required
      type="email"
      name="email"
      value="{{ user.email }}"
      placeholder="Digite seu email"
      >
  </div>
</div>

<div class="item">
  <div>Nova Senha</div>
  <div class="input">
    <input
      required
      type="password"
      name="password"
      placeholder="Digite sua nova senha"
      >
  </div>
</div>

<div class="item">
  <div>Repetir Senha</div>
  <div class="input">
    <input
      required
      type="password"
      name="passwordRepeat"
      placeholder="Repita a nova senha"
      >
  </div>
</div>