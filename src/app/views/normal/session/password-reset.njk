{% extends "normal/layout.njk" %}

{% block styles %}
  <title>Recuperar senha - Foodfy</title>
  <link rel="stylesheet" href="/styles/normal/session.css">
{% endblock %}

{% block searchBlock %}
{% endblock %}

{% block content %}
<section class="password-reset container">
  <form action="/session/password-reset" method="POST">
    <div class="header">
      <h1>Nova Senha</h1>
    </div>
    <div class="fields">
      {% include "normal/session/reset-fields.njk" %}
      <input type="hidden" name="token" value="{{ token }}">
    </div>
    <div class="footer">
      <button type="submit" class="submit">Nova Senha</button>
    </div>
  </form>
</section>
{% endblock %}