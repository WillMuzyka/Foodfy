{% extends "normal/layout.njk" %}
{% import "parts/search.njk" as search %}

{% block styles %}
  <title>Chefs - Foodfy</title>
  <link rel="stylesheet" href="/styles/chefs.css">
{% endblock %}

{% block searchBlock %}
  {{ search.searchBox("chefs", "chefs") }} 
{% endblock %}

{% block content %}
  {% if filter %}
  <h2>Buscando por "{{ filter }}"</h2>
  {% endif %}
  <section class="chefs">
    {% for chef in chefs %}
      <div class="chef card" id="{{ chef.id }}">
        <img src="{{ chef.src }}" alt="chef img">
        <div class="chef-info">
          <p class="chef-name">{{ chef.name }}</p>
          <p class="publications">{{ chef.total_recipes }} receitas</p>
        </div>
      </div>
    {% endfor %}
  </section>

  {% include "parts/pagination.njk" %}
{% endblock %}