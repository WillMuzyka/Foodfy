{% extends "admin/layout.njk" %}

{% block styles %}
  <title>Admin - Foodfy</title> 
  <link rel="stylesheet" href="/styles/admin.css">
{% endblock %}

{% block currentRecipe %}
  class="current"
{% endblock %}

{% block content %}
  <div class="manager">
    <h1>Gerenciar Receitas</h1>
    <a class="new-recipe" href="/admin/recipes/create">Nova receita</a>
  </div>
  <section class="recipes index">
    {% for recipe in recipes %}
      <div class="recipe">
        <img src="{{ recipe.image }}" alt="ilustrative img">
        <div class="recipe-info">
          <p class="recipe-name">{{ recipe.title }}</p>
          <p class="recipe-author">por {{ recipe.author }}</p>
          <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock %}